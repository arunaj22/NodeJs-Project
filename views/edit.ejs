<% include ../partials/header%>

<div class="row">
    
    <h1>Edit SQL page</h1>

    <div class="grid-container">
        
        <% res1.forEach(function(product){%>
        
        <form accept-charset="UTF-8" action="/editsql/<%= product.Id%>" method="post">

            <div class="item">
                <label for="name">Name:</label>
                <input name="name" type="text" value="<%= product.Name%>", required />
                
                <label for="price">Price:</label>
                <input name="price" type="text" value="<%= product.Price%>", required />     

                <label for="image">Image:</label>
                <input name="image" type="text" value="<%= product.Image %>" /> 
                 
                 <label for="description">Description:</label>
                <input name="description" type="text" value="<%= product.Description%>", required /> 

                <button class="button">Edit Service</button>
                
              </div>
        </form>
        
        <% }); %>
        
    </div>
 </div>

<% include ../partials/footer%>